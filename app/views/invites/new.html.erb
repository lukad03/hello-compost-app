<header>
  <h1>Send an Invite</h1>
</header>

<%= simple_form_for [@organization, @invite] do |invite| %>

  <%= invite.input :email %>

  <%= invite.association :locations, collection: locations, as: :check_boxes,
  label_method: lambda { |location| "<span class='check'></span><span class='location-name'>#{location.name}</span>".html_safe }, value_method: :id, :label => false %>

  <%= invite.button :submit, 'Send Invite' %>

<% end %>
