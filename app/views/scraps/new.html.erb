<script type="text/javascript">
  $(document).ready(function() {
    $("#scrap_client_id").select2({
      placeholder: "Select a Client"
    });
  });
</script>

<header>
<h1>Add Scraps</h1>
</header>

<%= simple_form_for @scrap, url: location_scraps_path do |scrap| %>
  <%= scrap.input :weight, label: 'How much does your waste weigh?', required: true %>
  <%= scrap.select :client_id, Client.all.collect {|x| [x.username, x.id]}, {} %>
  <%= scrap.button :submit %>
<% end %>
