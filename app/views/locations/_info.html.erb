<div class="location-info">

  <section class="address-hours">
    <h3>Details</h3>
    <h4>Address</h4>
    <p><%= @location.address %></p>
    <h4>Hours</h4>
    <p><%= @location.hours %></p>
  </section>

  <section class="facilitators">
    <h3>Facilitators</h3>
    <% @location.facilitators.each do |facilitator| %>
      <p><%= facilitator.name %></p>
    <% end %>
  </section>
</div>
